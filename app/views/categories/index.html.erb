<p id="notice"><%= notice %></p>

<h1>Categorias de cuarto</h1>

<table  class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Editar', edit_category_path(category), :class=>"btn" %></td>
        <td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Estas Seguro?' }, :class=>"btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva categoria de cuarto', new_category_path, :class=>"btn" %>
