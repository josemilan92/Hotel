<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.file_field :photo %>
    <%= f.input :price %>
    <%= f.input :category %>
    <%= f.input :subcategory %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
