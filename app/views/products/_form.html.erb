<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.file_field :photo %>
    <%= f.input :price , rows: 10, cols: 60 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
