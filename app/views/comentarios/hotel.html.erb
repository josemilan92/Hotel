<p id="notice"><%= notice %></p>

<h1>Hotel</h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Lugar</th>
    <th>Foto</th>
    <th>Precio</th>
    <th>Descripción</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @hotels.each do |post| %>
      <tr>
        <td><%= post.nombre %></td>
        <td><%= post.price %></td>
        <td><%= post.descripcion %></td>
        <td><%= image_tag post.photo, width:100 %></td>
        <td><%= link_to 'Editar', edit_hotel_path(post), class:'btn btn-default' %></td>
        <td><%= link_to 'Eliminar', post, method: :delete, data: { confirm: 'Are you sure?' } , class:'btn btn-default'%></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Habitación', new_hotel_path, class:'btn btn-default' %>