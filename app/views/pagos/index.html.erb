<p id="notice"><%= notice %></p>

<h1>Pagos</h1>

<table  class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pagos.each do |pago| %>
      <tr>
        <td><%= pago.name %></td>
        <td><%= link_to 'Editar', edit_pago_path(pago), :class=>"btn" %></td>
        <td><%= link_to 'Eliminar', pago, method: :delete, data: { confirm: 'Estas Seguro?' }, :class=>"btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo tipo de pago', new_pago_path, :class=>"btn" %>
