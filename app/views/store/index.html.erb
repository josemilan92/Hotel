<% if notice %>
    <aside id="notice"><%= notice %></aside>
<% end %>
<% cache @products do %>
    <% @products.each do |product| %>
        <% cache product do %>
            <div class="entry">
  <%= image_tag(product.photo) %>
  <h3><%= product.title %></h3>
  <%= sanitize(product.description) %>
    <div class="price_line">
      <span class="price">
      <%= number_to_currency(product.price) %>
    </span> <%= button_to 'Add to Cart', line_items_path(product_id: product) %>
    </div>
</div>
</div>
        <% end %>
    <% end %>
<% end %>
