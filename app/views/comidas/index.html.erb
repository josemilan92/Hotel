<p id="notice"><%= notice %></p>

<h1>Comidas</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comidas.each do |comida| %>
      <tr>
        <td><%= comida.description %></td>
        <td><%= comida.total %></td>
        <td><%= link_to 'Show', comida %></td>
        <td><%= link_to 'Edit', edit_comida_path(comida) %></td>
        <td><%= link_to 'Destroy', comida, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

